---
import { type CourseraCourse } from "../../models/courses";

interface Props {
  course: CourseraCourse;
}

const { course } = Astro.props;
---

<a
  href={`/c/${course.id}`}
  class="block mx-auto p-6 bg-white border border-gray-200 h-56 rounded-lg shadow-sm hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
>
  <h5
    class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white line-clamp-2"
  >
    {course.title}
  </h5>
  <p class="font-normal text-gray-700 dark:text-gray-400 line-clamp-2">
    Habilidades: {course.skills}
  </p>
  <p class="font-normal text-gray-700 dark:text-gray-400">
    Reseñas: {course.reviews}
  </p>
  <div class="my-2 flex justify-between items-center">
    <span
      class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-sm dark:bg-blue-200 dark:text-blue-800"
      >{course.score} ⭐</span
    >
    <a
      href={course.url || `https://www.coursera.org/programs/coursera-para-la-universidad-nacional-de-colombia-ji3sj/browse?query=${encodeURIComponent(course.title)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="text-blue-600 hover:underline dark:text-blue-500 text-sm font-medium flex items-center"
    >
      Ver en Coursera
      <svg 
        class="w-4 h-4 ml-1" 
        fill="none" 
        stroke="currentColor" 
        viewBox="0 0 24 24" 
        xmlns="http://www.w3.org/2000/svg"
      >
        <path 
          stroke-linecap="round" 
          stroke-linejoin="round" 
          stroke-width="2" 
          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
        ></path>
      </svg>
    </a>
  </div>
</a>
