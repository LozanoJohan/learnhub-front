---
import { type Club } from '../../models/clubs';

interface Props {
  club: Club
}

const { club } = Astro.props;
---

<a
  href={`/g/${club.id}`}
  class="block mx-auto p-6 bg-white border border-gray-200 h-80 rounded-lg shadow-sm hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700"
>
  <img src={club.logo} alt={club.title} class="w-full h-32 object-cover rounded-t-lg" />
  <h5
    class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white line-clamp-2"
  >
    {club.title}
  </h5>
  <p class="font-normal text-gray-700 dark:text-gray-400 line-clamp-2">
    {club.description}
  </p>
  <p class="font-normal text-gray-700 dark:text-gray-400">
    Contacto: {club.contact}
  </p>
  <div class="my-2 space-x-1">
    {club.tags.map((tag) => <span
      class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-sm dark:bg-blue-200 dark:text-blue-800"
      >{tag}</span>)}
  </div>
</a>
