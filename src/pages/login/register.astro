---
import Layout from '../../layouts/Layout.astro';
import RegisterForm from '../../components/login/RegisterForm';
---

<Layout title="Registro de Usuario">
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
      <img class="mx-auto h-12 w-auto" src="/logo-unal.svg" alt="Logo Universidad Nacional" />
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-white">
        Crea tu cuenta
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600 dark:text-gray-400">
        O
        <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500 dark:text-indigo-400">
          inicia sesi√≥n si ya tienes una cuenta
        </a>
      </p>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
      <div class="bg-white dark:bg-gray-800 py-8 px-4 shadow sm:rounded-lg sm:px-10">
        <RegisterForm client:load />
      </div>
    </div>
  </main>
</Layout>